{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "declaration": false, // Optional: Generate declaration files
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
